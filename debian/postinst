#!/bin/sh
# postinst script for nss-envhosts
#
# see: dh_installdeb(1)

set -e

case "$1" in
    configure)
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

nsswitch_path=/etc/nsswitch.conf
# Add entry to nsswitch.conf but first make sure that an entry doesn't already exist for it.
if ! grep -q envhosts ${nsswitch_path}; then
    sed -i 's|\(^hosts:.*\)files|\1envhosts files|g' ${nsswitch_path}
fi

exit 0
